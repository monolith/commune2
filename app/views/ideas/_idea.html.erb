<table border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td valign="top">
      <div id="snippet-stat" name="snippet-stat">
        <%= stats_for(idea) %>
      </div>
    </td>
    <td valign="top">

      <%= div_tag_for(idea) %> 

        <h2><%= link_to h(idea.title), idea_path(:id => idea) %></h2>
        <%= render :partial => '/shared/stars', :locals => { :scorable => idea} %>

        | Posted <%= time_ago_in_words(idea.created_at) %>

        <p><%= show_description(idea) %></p>
        <p><%= dashboard_for(idea) %></p>

      </div>
    </td>
  </tr>
</table>
