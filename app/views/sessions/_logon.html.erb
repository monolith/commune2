<div id="login-splash">
  <% form_tag session_path do -%>

  <h1 style=" text-transform: none;">If you have been invited to join, please <%= link_to "register", signup_path %>.        What is this thing? Check out our <%= link_to "about", help_path %> page. 
      If your registration has been activated, you can log in.
 </h1>
  
  <table border="0" cellpading="0" cellpadding="0" width="100%">
    <tr>
      <td valign="top" width="33%"><h2>Login or email</h2>
          <%= text_field_tag 'login', @login, :class => 'brown_border', :tabindex => 1, :style => "width:90%" %>
        <p><%= check_box_tag 'remember_me', '1', @remember_me, :class => 'brown_border', :tabindex => 4 %>
        Remember me  </p>
      </td>
      <td valign="top" width="33%">
        <h2>Password (CaSe SeNsitIvE)</h2>
        <%= password_field_tag 'password', nil, :class => 'brown_border', :tabindex => 2, :style => "width:90%"  %>
      </td>
      
      <td valign="top">
        <h2>Are you human?</h2>
        <%= recaptcha_tags(:display => {:theme => 'red', :tabindex => 3}) %>


      </td>
    </tr>
    <tr>
      <td colspan="2">
        <p>&nbsp; </p>
      </td>
      <td align="left">
        <p><%= submit_tag 'Log in', :class => 'big_button', :tabindex => 5 %></p>

      </td>
    </tr>
    <tr>
      <td colspan="3">
        <%= link_to "Forgot password?", forgot_password_path %>
      </td>
    </tr>
    </table>

  
  <% end -%>


</div>
