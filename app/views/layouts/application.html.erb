  <body>


        <div id="site-container">

        <!-- content table container -->
        <table height="100%" width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr><td valign="top" height="155">



          <div id="banner">    

            <!-- banner table container -->
            <table border="0" cellspacing="0" cellpadding="0" width="100%">
              <tr>
                <td valign="top">
                 
                  <span id="banner-logo">
                    <%= link_to image_tag("c2_banner_logo_brown.png", :border => 0), root_path %>

                    <table border="0" cellspacing="0" cellpadding="0" width="100%">
                      <tr>
                        <td valign="bottom" align="left" height="90">                 
                          <%= section_icon %>
                        </td>
                        <td valign="top">
                          <p class="banner"><%= link_to image_tag("menu_icons/home_menu_icon.png", :border => "0"), root_path %></p>
                          <p class="banner"><%= link_to image_tag("menu_icons/help_menu_icon.png", :border => "0"), help_path %></p>
                        </td>
                      </tr>
                    </table>

                  </span>
                </td>

            
            
            <% if logged_in? and request.path_parameters[:controller] != "user" %>

                <td valign="top" width="140">
              
                  <span id="banner-menu-ideas">
                    <%= link_to "ideas", ideas_path, :class => menu_link_class("ideas", "ideas") %>
                    <%= link_to "post new", new_idea_path, :class => menu_link_class("ideas", "new") %>                    
                    <%= link_to "watchlist", watchlist_ideas_path, :class => menu_link_class("ideas", "watchlist") %>
                    <%= link_to "my ideas", my_ideas_path, :class => menu_link_class("ideas", "my") %>                    
                  </span>
                </td>
                <td valign="top" width="155">

                  <span id="banner-menu-projects">
                    <%= link_to "projects", projects_path, :class => menu_link_class("projects", "projects") %>
                    <%= link_to "post new", new_project_path, :class => menu_link_class("projects", "new")  %>
                    <%= link_to "watchlist", watchlist_projects_path, :class => menu_link_class("projects", "watchlist") %>
                    <%= link_to "my projects", my_projects_path, :class => menu_link_class("projects", "my") %>
                  </span>

                </td>
                <td valign="top" width="135">

                  <span id="banner-menu-jobs">
                    <%= link_to "jobs", jobs_path, :class => menu_link_class("jobs", "jobs") %>
                    <%= link_to "post new", new_job_path, :class => menu_link_class("jobs", "new")  %>
                    <%= link_to "watchlist", watchlist_jobs_path, :class => menu_link_class("jobs", "watchlist") %>
                    <%= link_to "my jobs", my_jobs_path, :class => menu_link_class("jobs", "my") %>
                  </span>

                </td>
                <td valign="top" width="135">

 
                  <span id="banner-menu-people">
                    <%= link_to "people", users_path, :class => menu_link_class("users", "people") %>
                    <%= link_to "invite", new_invitation_path, :class => menu_link_class("users", "new") %>
                    <%= link_to "watchlist", watchlist_people_path, :class => menu_link_class("users", "watchlist") %>
                    <%= link_to "my profile", edit_user_path(current_user), :class => menu_link_class("users", "my") %>

                  </span>             
                  
                </td>
           
           
           <% else %>
              <td>           
                 <h1>Share Ideas. Learn. Collaborate. Build. Change the World.</h1>
              </td>
          <% end %>
          <% if logged_in? %>      
                <td valign="top">
                  <span id="banner-search">
                        <% form_tag searches_path, :method => :get do %>
                        <%= text_field_tag :search, params[:search] %>
                        <%= submit_tag "Search", :name => nil %>
                        <% end %>
        
                    <p class="banner"> &nbsp; </p>
                    <p class="banner">logged in as: <%= link_to current_user.login, edit_user_path(current_user), :class=> "banner-no-block" %> (<%= link_to "logout", logout_path, :class => "banner-no-block" %>)</p>

                  </span>

                  </td>
              <% end %>

              </tr>
            </table>  <!-- banner table container -->

          </div>

          </td></tr>
          <tr><td valign="top"> <!-- content table container -->


