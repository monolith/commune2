               <% unless flash[:error].blank? %>
                 <div id="error"><%=h flash[:error] %> </div>
               <% end %>
               <% unless flash[:notice].blank? %>
                  <div id="notice"><%=h flash[:notice] %> </div>
               <% end %>

                      
              <%= yield %>

            </div>


        </td>
      </tr>
