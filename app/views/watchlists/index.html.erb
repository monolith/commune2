<% content_for :title do %><%= @header %><% end %>


<h1><%= @title.upcase %></h1>

<% unless request.path_parameters[:action] == 'index' %>
  <table border="0" cellspacing="0" cellpadding="0">
    <tr>
      <td><%= image_tag("other_icons/arrow_icon.png", :border=>"0") %></td>
      <td>&nbsp;<%= link_to "full watchlist", watchlists_path %></td>
    </tr>
  </table>
  <br />
<% end %>

<% if params[:search] %><h2>Search Criteria: <%=h params[:search] %></h2><% end %>
  
<% if @ideas %>
  <div id="section_header"><h2>&nbsp;<%= pluralize @ideas_count, 'Idea' %></h2></div>
  <%= render :partial => @ideas %>
<% end %>

<% if @projects %>
  <div id="section_header"><h2>&nbsp;<%= pluralize @projects_count, 'Project' %></h2></div>
  <%= render :partial => @projects %>
<% end %>

<% if @jobs %>
  <div id="section_header"><h2>&nbsp;<%= pluralize @jobs_count, 'Job' %></h2></div>
  <%= render :partial => @jobs %>
<% end %>

<% if @people %>
  <div id="section_header"><h2>&nbsp;<%= pluralize @people_count, 'Person' %></h2></div>
  <%= render :partial => @people %>
<% end %>


