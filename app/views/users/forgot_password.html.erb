<% content_for :title do %>Reset Password<% end %>



    <h1>Forgot your password?</h1>

    Enter your email and we will help you reset your password.
<% form_tag forgot_password_path do -%>
  <p><%= label_tag 'email' %><br />
  <%= text_field_tag 'email', @email, :size => 40 %></p>

     <%= render :partial => '/shared/reCAPTCHA' %>

  <p><%= submit_tag 'Help!' %></p>

<% end -%>
